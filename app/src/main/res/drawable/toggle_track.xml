<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/create_back"/>
            <!--<stroke android:color="@android:color/transparent" android:width="1dp"/>-->
            <corners android:radius="20dp"/>
            <size android:width="75dp" android:height="40dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/create_back"/>
            <!--<stroke android:color="@color/toggle_border" android:width="1dp"/>-->
            <corners android:radius="20dp"/>
            <size android:width="75dp" android:height="40dp"/>
        </shape>
    </item>
</selector>